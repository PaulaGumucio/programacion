#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

void main ()
{float S, X, N, FACT, POT, i;
 S=2;
 FACT=1;
 i=1;
 cout<<"Ingrese el valor de N: "<<endl;
 cin>>N;
 cout<<"Ingrese el valor de X: "<<endl;
 cin>>X;
 while (i<=N)
  {POT=pow(X,i);
   FACT=FACT*i;
   S=S+(POT/FACT);
   i++;
  }
 cout<<"El valor de la sumatoria es: "<<S<<endl;
 getch ();
}
