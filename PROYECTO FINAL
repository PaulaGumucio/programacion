void mostrarhorariosdisponibles(int vec[]) 
{ 
if (vec[1]==0) 
    cout<<"7:00-8:00"<<endl; 
if(vec[2]==0) 
    cout<<"9:00-10:00"<<endl; 
if(vec[3]==0) 
    cout<<"10:00-12:00"<<endl; 
} 

void HorarioJorge(int vec[]) 
{ 
int opcion=0,i; 
cout<<"--------------------"<<endl; 
cout<<"HORARIOS DISPONIBLES"<<endl; 
cout<<"--------------------"<<endl; 
cout<<"\t\t"<<endl; 
cout<<"1.-7:00-8:00"<<endl; 
cout<<"2.-9:00-10:00"<<endl; 
cout<<"3.-10:00-11:00"<<endl; 
do 
{ 
 cin>>opcion; 
} 

while(vec[opcion]==1); 
vec[opcion]=1; 
cout<<"Ya reservo"<<endl; 
} 

