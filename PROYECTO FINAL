// 

void main () 
{
int opcion,i; 
int vec[20]; 
for(i=0;i<21;i++) 
    vec[i]=0;
do{ 
cout<<"\t\t ****MENU**** \n\n"<<endl; 
cout<<"-------------------------------"<<endl; 
cout<<" Elija la peluqueria que desea: "<<endl; 
cout<<"-------------------------------"<<endl; 
cout<<"\t\t"<<endl; 
cout<<"1.-Destaques"<<endl; 
cout<<"2.-H2O"<<endl; 
cout<<"3.-KidsCuts"<<endl; 
cout<<"0.-Salir"<<endl; 
cin>>opcion; 
switch(opcion) 
{ 
case 1: primermenu(vec); 
        break; 
case 2: segundomenu (vec); 
break; 
case 3: tercermenu (vec); 
break; 
default: 
cout<<"ERROR DE OPCION"<<endl; 
} 
} 
while (opcion!=0); 
getch(); 
}
