void primermenu(int vec[]) 
{
int opcion; 
cout<<"--------------------"<<endl; 
cout<<"PELUQUERIA DESTAQUES"<<endl; 
cout<<"--------------------\t\t"<<endl; 
cout<<"\t\t"<<endl; 
cout<<"Direccion: Av. Monseñor Rivero"<<endl; 
cout<<"Precio: 60bs "<<endl; 
cout<<"\t\t"<<endl; 
cout<<"Elija el peluquero"<<endl; 
cout<<"1.-Jorge"<<endl; 
cout<<"2.-Carlos"<<endl; 
cin>>opcion; 
switch(opcion) 
{ 
case 1 : HorarioJorge(vec); 
    break; 
case 2 : HorarioCarlos(vec); 
    break;
}
} 

